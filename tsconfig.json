{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules/phaser-ce/typescript/"
  ],
  "importsNotUsedAsValues": "remove"
}
